{
  "name": "react-workshop",
  "version": "1.0.0",
  "description": "react-workshop",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "rimraf ./dist-dev && webpack-dev-server --config webpack/webpack.dev.js --progress --hot",
    "build:analyze": "rimraf ./dist && webpack --config webpack/webpack.analyze.js --progress",
    "build": "rimraf ./dist && webpack --config webpack/webpack.prod.js --progress",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest",
    "lint": "eslint --color src",
    "serve": "serve ./dist",
    "rest": "json-server --watch ./server/db.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudfoss/react-workshop.git"
  },
  "keywords": [],
  "author": "",
  "bugs": {
    "url": "https://github.com/rudfoss/react-workshop/issues"
  },
  "homepage": "https://github.com/rudfoss/react-workshop#readme",
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@hot-loader/react-dom": "^16.11.0",
    "autoprefixer": "^9.7.2",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "core-js": "^3.4.2",
    "css-loader": "^3.2.0",
    "eslint": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "json-server": "^0.15.1",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.7.2",
    "react-hot-loader": "^4.12.18",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "serve": "^11.2.0",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^2.2.1",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "axios": "^0.19.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux-actions": "^2.6.5",
    "redux-saga": "^1.1.3"
  },
  "jest": {
    "bail": 1,
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "^features(.*)$": "<rootDir>/src/features$1",
      "^ui(.*)$": "<rootDir>/src/features/ui$1",
      "^ducks(.*)$": "<rootDir>/src/ducks$1"
    }
  }
}
